<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataBinding_2890433"
             x:Class="DataBinding_2890433.MainPage">

    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Margin="20,20,20,20">
            <Entry x:Name="NombreAlumno" Text="{Binding Nombre}" Placeholder="Ingrese su nombre"/>
            <Label Text="{Binding MostrarNombre}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
